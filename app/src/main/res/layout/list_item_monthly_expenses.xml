<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_vertical_margin"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            tools:text="November"
            android:paddingTop="@dimen/vertical_padding"
            android:paddingBottom="@dimen/small_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/monthLabel"
            android:layout_toLeftOf="@+id/totalAmount"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="$ 1111150.00"
            android:textStyle="bold"
            android:paddingTop="@dimen/vertical_padding"
            android:paddingBottom="@dimen/small_vertical_padding"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/totalAmount"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/expencePercentage"
            android:layout_toStartOf="@+id/expencePercentage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="(100.00%)"
            android:paddingTop="@dimen/vertical_padding"
            android:paddingBottom="@dimen/small_vertical_padding"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/expencePercentage"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/small_vertical_padding"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upArrow"
                android:src="@drawable/ic_arrow_up"
                android:layout_below="@+id/monthLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="$ 10000.00"
                android:id="@+id/winAmount"
                android:paddingTop="@dimen/vertical_padding"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@+id/upArrow"
                android:layout_toRightOf="@+id/upArrow"
                android:layout_toEndOf="@+id/upArrow"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downArrow"
                android:src="@drawable/ic_arrow_down"
                android:layout_below="@+id/monthLabel"
                android:layout_toRightOf="@+id/monthLabel"
                android:layout_toEndOf="@+id/monthLabel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="$ -5000.00"
                android:id="@+id/lossAmount"
                android:paddingTop="@dimen/vertical_padding"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/totalAmount"
                android:layout_toRightOf="@+id/downArrow"
                android:layout_toEndOf="@+id/downArrow"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>